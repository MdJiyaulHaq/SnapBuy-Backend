# Django Settings
DEBUG=True
SECRET_KEY=your-secret-key-change-this-in-production
DJANGO_LOG_LEVEL=INFO
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Database (for Docker, these are overridden by docker-compose)
POSTGRES_DB=snapbuy_dev
POSTGRES_USER=snapbuy_dev
POSTGRES_PASSWORD=snapbuy_dev
DB_PORT=5432

# Redis/Cache (for Docker, these are overridden by docker-compose)
REDIS_PORT=6379
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Web Server
WEB_PORT=8000

# CORS (Frontend URL)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-password
EMAIL_USE_TLS=True
DEFAULT_FROM_EMAIL=noreply@snapbuy.com

# Celery Settings
CELERY_TIMEZONE=UTC
CELERY_BROKER_URL=redis://localhost:6379/0
