# Django Settings
DEBUG=False
SECRET_KEY=your-very-secure-secret-key-min-50-chars-change-this
DJANGO_LOG_LEVEL=WARNING
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,api.yourdomain.com

# Database (PostgreSQL in production)
POSTGRES_DB=snapbuy_prod
POSTGRES_USER=snapbuy_prod
POSTGRES_PASSWORD=your-very-secure-postgres-password-min-20-chars
DB_PORT=5432

# Redis/Cache (Production Redis)
REDIS_PORT=6379
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Web Server
WEB_PORT=8000

# CORS (Frontend Production URL)
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Email Configuration (Use production email service)
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_HOST_USER=apikey
EMAIL_HOST_PASSWORD=your-sendgrid-api-key
EMAIL_USE_TLS=True
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# Celery Settings
CELERY_TIMEZONE=UTC

# SSL Configuration (if using self-signed or custom certs)
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem

# Nginx Host
NGINX_HOST=yourdomain.com
NGINX_PORT=80
